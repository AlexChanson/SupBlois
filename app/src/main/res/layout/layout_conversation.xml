<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:divider="@null"
    android:dividerHeight="0dp">

    <TextView
        android:id="@+id/textViewMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewOther"
        android:layout_alignBottom="@+id/textViewOther"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="15dp"
        android:maxWidth="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bubble_me"
        android:gravity="center"
        android:text="@string/me"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="200dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:maxWidth="150dp"
        android:background="@drawable/bubble_other"
        android:gravity="center"
        android:text="@string/other"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="15dp" />
</RelativeLayout>